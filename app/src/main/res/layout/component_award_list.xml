            android:layout_height="10dp" />

        <LinearLayout
            android:id="@+id/award_card_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- add content -->

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />


        <!-- add content -->

    </LinearLayout>

</ScrollView>