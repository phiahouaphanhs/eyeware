<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/filter_colors_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="@string/filter_colors_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/eyeware_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layout_change_color_gold"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/layout_round_shape_black_shade"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filter_colors_label">

        <ImageView
            android:id="@+id/button_change_color_gold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/overlay_color_gold"
            android:padding="10dp"
            android:src="@drawable/ic_style_cream_24dp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/edit_icon_gold"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/layout_rectangle_dark_gray_shade_white_bottomleft_angle"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/layout_change_color_gold"
        app:layout_constraintTop_toTopOf="@+id/layout_change_color_gold"
        app:srcCompat="@drawable/ic_edit_black_24dp" />

    <LinearLayout
        android:id="@+id/layout_change_color_green"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/layout_round_shape_black_shade"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/filter_colors_label">

        <ImageView
            android:id="@+id/button_change_color_green"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/overlay_color_green"
            android:padding="10dp"
            android:src="@drawable/ic_style_cream_24dp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/edit_icon_green"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/layout_rectangle_dark_gray_shade_white_bottomleft_angle"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/layout_change_color_green"
        app:layout_constraintTop_toTopOf="@+id/layout_change_color_green"
        app:srcCompat="@drawable/ic_edit_black_24dp" />

    <LinearLayout
        android:id="@+id/layout_change_color_pink"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/layout_round_shape_black_shade"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_change_color_gold">

        <ImageView
            android:id="@+id/button_change_color_pink"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/overlay_color_pink"
            android:padding="10dp"
            android:src="@drawable/ic_style_cream_24dp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/edit_icon_pink"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/layout_rectangle_dark_gray_shade_white_bottomleft_angle"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/layout_change_color_pink"
        app:layout_constraintTop_toTopOf="@+id/layout_change_color_pink"
        app:srcCompat="@drawable/ic_edit_black_24dp" />

    <LinearLayout
        android:id="@+id/layout_change_color_brown"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/layout_round_shape_black_shade"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/layout_change_color_green">

        <ImageView
            android:id="@+id/button_change_color_brown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/overlay_color_brown"
            android:padding="10dp"
            android:src="@drawable/ic_style_cream_24dp" />

    </LinearLayout>



    <ImageView
        android:id="@+id/edit_icon_brown"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/layout_rectangle_dark_gray_shade_white_bottomleft_angle"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/layout_change_color_brown"
        app:layout_constraintTop_toTopOf="@+id/layout_change_color_brown"
        app:srcCompat="@drawable/ic_edit_black_24dp" />

    <LinearLayout
        android:id="@+id/layout_change_color_purple"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/layout_round_shape_black_shade"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_change_color_pink">

        <ImageView
            android:id="@+id/button_change_color_purple"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/overlay_color_purple"
            android:padding="10dp"
            android:src="@drawable/ic_style_cream_24dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/edit_icon_purple"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/layout_rectangle_dark_gray_shade_white_bottomleft_angle"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/layout_change_color_purple"
        app:layout_constraintTop_toTopOf="@+id/layout_change_color_purple"
        app:srcCompat="@drawable/ic_edit_black_24dp" />

    <LinearLayout
        android:id="@+id/layout_change_color_red"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/layout_round_shape_black_shade"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/divider"
        app:layout_constraintTop_toBottomOf="@+id/layout_change_color_brown">

        <ImageView
            android:id="@+id/button_change_color_red"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/overlay_color_red"
            android:padding="10dp"
            android:src="@drawable/ic_style_cream_24dp" />

    </LinearLayout>



    <ImageView
        android:id="@+id/edit_icon_red"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/layout_rectangle_dark_gray_shade_white_bottomleft_angle"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/layout_change_color_red"
        app:layout_constraintTop_toTopOf="@+id/layout_change_color_red"
        app:srcCompat="@drawable/ic_edit_black_24dp" />

    <LinearLayout
        android:id="@+id/layout_change_color_orange"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/layout_round_shape_black_shade"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_change_color_purple">

        <ImageView
            android:id="@+id/button_change_color_orange"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/eyeware_black"
            android:padding="10dp"
            android:src="@drawable/ic_style_cream_24dp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/edit_icon_orange"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/layout_rectangle_dark_gray_shade_white_bottomleft_angle"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/layout_change_color_orange"
        app:layout_constraintTop_toTopOf="@+id/layout_change_color_orange"
        app:srcCompat="@drawable/ic_edit_black_24dp" />


    <LinearLayout
        android:id="@+id/layout_change_color_blue"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/layout_round_shape_black_shade"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/divider"
        app:layout_constraintTop_toBottomOf="@+id/layout_change_color_red">

        <ImageView
            android:id="@+id/button_change_color_blue"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/overlay_color_blue"
            android:padding="10dp"
            android:src="@drawable/ic_style_cream_24dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/edit_icon_blue"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/layout_rectangle_dark_gray_shade_white_bottomleft_angle"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="@+id/layout_change_color_blue"
        app:layout_constraintTop_toTopOf="@+id/layout_change_color_blue"
        app:srcCompat="@drawable/ic_edit_black_24dp" />

    <View
        android:id="@+id/divider"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filter_colors_label" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/layout_change_color_gold"
        app:layout_constraintEnd_toEndOf="@+id/layout_change_color_gold"
        app:layout_constraintStart_toStartOf="@+id/layout_change_color_gold"
        app:layout_constraintTop_toTopOf="@+id/layout_change_color_gold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/layout_change_color_green"
        app:layout_constraintEnd_toEndOf="@+id/layout_change_color_green"
        app:layout_constraintStart_toStartOf="@+id/layout_change_color_green"
        app:layout_constraintTop_toTopOf="@+id/layout_change_color_green" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/layout_change_color_pink"
        app:layout_constraintEnd_toEndOf="@+id/layout_change_color_pink"
        app:layout_constraintStart_toStartOf="@+id/layout_change_color_pink"
        app:layout_constraintTop_toTopOf="@+id/layout_change_color_pink" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/layout_change_color_brown"
        app:layout_constraintEnd_toEndOf="@+id/layout_change_color_brown"
        app:layout_constraintStart_toStartOf="@+id/layout_change_color_brown"
        app:layout_constraintTop_toTopOf="@+id/layout_change_color_brown" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/layout_change_color_purple"
        app:layout_constraintEnd_toEndOf="@+id/layout_change_color_purple"
        app:layout_constraintStart_toStartOf="@+id/layout_change_color_purple"
        app:layout_constraintTop_toTopOf="@+id/layout_change_color_purple" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/layout_change_color_red"
        app:layout_constraintEnd_toEndOf="@+id/layout_change_color_red"
        app:layout_constraintStart_toStartOf="@+id/layout_change_color_red"
        app:layout_constraintTop_toTopOf="@+id/layout_change_color_red" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/layout_change_color_orange"
        app:layout_constraintEnd_toEndOf="@+id/layout_change_color_orange"
        app:layout_constraintStart_toStartOf="@+id/layout_change_color_orange"
        app:layout_constraintTop_toTopOf="@+id/layout_change_color_orange" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/layout_change_color_blue"
        app:layout_constraintEnd_toEndOf="@+id/layout_change_color_blue"
        app:layout_constraintStart_toStartOf="@+id/layout_change_color_blue"
        app:layout_constraintTop_toTopOf="@+id/layout_change_color_blue" />

</android.support.constraint.ConstraintLayout>
